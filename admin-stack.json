				"UserData": {
					"Fn::Base64": {
						"Fn::Join": ["\n",
							[
								"#!/bin/bash",
								"export HOME=/root",
								"apt-get update",
								"apt-get upgrade -y",
								"apt-get install -y ansible",
								"apt-get install -y git",
								"cd /root",
								"git clone https://github.com/dmcgowandmc/admin-services.git",
								"cd admin-services",
								{"Fn::Join": [" ", [
									"ansible-playbook -i inventory/adminstack init-adminstack.yml --extra-vars \"",
									{"Fn::Join": ["=", [
										"efsfqdn", {
											"Ref": "EFSAdminStack"
										}
